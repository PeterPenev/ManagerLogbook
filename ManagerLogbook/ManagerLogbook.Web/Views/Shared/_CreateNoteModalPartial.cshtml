@model NoteViewModel

<!-- Note Modal -->
<div class="modal fade" id="myModalNote" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create note</h4>
            </div>
            <div class="modal-body">
                <div class="text-danger-custom"></div>
                <form id="create-note" asp-area="Manager" asp-controller="Notes" asp-action="Create" enctype="multipart/form-data" method="post" class="loginForm">
                    <div class="form-group">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                        <textarea asp-for="Description" class="form-control" placeholder="Please enter a description"></textarea>
                        <span asp-validation-for="Description" class="text-danger-custom"></span>
                        <span class="text-danger-custom"></span>
                    </div>
                    <select id="notes-categories-selector" class="form-control" asp-for="CategoryId"></select>


                    <img style="height: 30%; width:100%; margin-top: 5%" id="blah" alt="your image" />
                    <label asp-for="Image" @*onclick="previewFile()"*@ class="btn btn-primary-custom browse margin-5">Upload Image</label>
                    <input id="blur" onchange="readURL(this);"  type="file" asp-for="NoteImage" class="btn btn-primary file" accept="image/*">

                    <div class="margin-5">
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                        <div class="margin-5">
                            @{ var referrer = this.Context.Request.Headers["Referer"]; }
                            @if (referrer != default(StringValues))
                            {
                                <a href="@referrer.ToString()">Go Back</a>
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End Note Modal -->