@*@model RegisterViewModel*@

<!-- Create Account Modal -->
<div class="modal fade" id="myModalRegister" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog">
        @*@await Html.PartialAsync("_StatusMessage", TempData["StatusMessage"])*@
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                @*<a class="close" data-dismiss="modal">x</a>*@
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create new account</h4>
            </div>
            <div class="modal-body">
                <div class="text-danger-custom"></div>
                <form id="submit-form-account" asp-area="Admin" asp-controller="Create" asp-action="Register" method="post" class="loginForm">
                    <div class="form-group">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input name="UserName" class="form-control" placeholder="Username">
                        @*<span asp-validation-for="UserName" class="text-danger-custom"></span>*@

                    </div>
                    <div class="form-group">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                        <input name="Email" type="email" class="form-control" id="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                        <input name="Password" type="password" class="form-control" id="pwd" placeholder="Password" required="">
                    </div>
                    <div class="form-group">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                        <input name="ConfirmPassword" type="password" class="form-control" placeholder="Password" required="" *>
                    </div>
                    <div class="padding-bottom-8">
                        <div class="contactSelect">
                            <select name="CategoryName" class="select-drop">
                                <option value="0">Select Category</option>
                                <option value="1">Restaurant</option>
                                <option value="2">Bar</option>
                                <option value="3">Cafe</option>
                            </select>
                        </div>
                    </div>
                    <div class="margin-5">
                        <button type="submit" asp-area="Admin" asp-controller="Create" asp-action="Register" class="btn btn-primary btn-block">Create Account</button>
                        <div class="margin-5">
                            @{ var referrer = this.Context.Request.Headers["Referer"]; }
                            @if (referrer != default(StringValues))
                            {
                                <a href="@referrer.ToString()">Go Back</a>
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End Create Account Modal -->
