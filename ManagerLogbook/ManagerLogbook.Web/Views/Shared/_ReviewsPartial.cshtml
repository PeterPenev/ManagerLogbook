@model BusinessUnitViewModel

@{
    ViewData["Title"] = "_ReviewPartial";
}

<h3>Reviews (@Model.Reviews.Count()) </h3>
@foreach (var review in Model.Reviews)
{
    <div class="media media-comment">
        <div class="media-body">
            <span class="date" style="color: black">@review.CreatedOn.ToString(("dd MMMM yyyy HH:mm:ss"))</span>
            <p>
                @review.EditedDescription
            </p>
        </div>
    </div>
}