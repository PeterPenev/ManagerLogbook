@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="no-padding">Hello @User.Identity.Name</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link @*navbar-btn*@ navbar-link logout-btn">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right" @*style="margin-left:0.1%" *@>
        <li><a asp-controller="Account" asp-action="Login">LogIn</a></li>
    </ul>
}
