<!-- BLOG DETAILS -->
<section class="clearfix blogDetials">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-xs-12">
                <div class="thumbnail blogContent">
                    <div class="caption">
                        <h3>@Model.Name</h3>                        
                        <img src="assets/img/blog/blog-1.jpg" alt="Image blog" class="img-responsive">
                        <p>@Model.Information</p>
                    </div>
                </div>
                <div class="commentArea">
                    <h3>Reviews (3) </h3>

                    <div class="media media-comment">
                        <div class="media-body">
                            <span class="date" style="color: black">14 Feb 2018</span>
                            <p>
                                Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudan
