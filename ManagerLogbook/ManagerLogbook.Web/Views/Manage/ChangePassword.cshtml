@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
}

<!-- LOGIN  MODAL -->
<div class="modal-dialog">
    @await Html.PartialAsync("_StatusMessage", Model.StatusMessage)
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <a asp-controller="Home" asp-action="Index" class="close" data-dismiss="modal">x</a>
            @*<button type="button" class="close" data-dismiss="modal">&times;</button>*@
            <h4 class="modal-title">Manage your account</h4>
        </div>
        <div class="modal-body">
            <div asp-validation-summary="All" class="text-danger-custom"></div>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="loginForm">
                <div class="form-group">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                    <input asp-for="OldPassword" class="form-control" placeholder="Enter your current password.">
                    <span asp-validation-for="OldPassword" class="text-danger-custom"></span>
                </div>
                <div class="form-group">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                    <input asp-for="NewPassword" class="form-control" placeholder="Enter new password.">
                    <span asp-validation-for="NewPassword" class="text-danger-custom"></span>
                </div>
                <div class="form-group">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password.">
                    <span asp-validation-for="ConfirmPassword" class="text-danger-custom"></span>
                </div>
                <div class="margin-5">
                    <button type="submit" class="btn btn-primary btn-block">Save</button>
                    <div class="margin-5">
                        @{ var referrer = this.Context.Request.Headers["Referer"]; }
                        @if (referrer != default(StringValues))
                        {
                            <a href="@referrer.ToString()">Go Back</a>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
