@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" @*class="navbar-right" *@>
        <ul @*class="nav navbar-nav" *@>
            <li>
                <a asp-controller="Manage" asp-action="Index" title="Manage" class="no-padding">@User.Identity.Name</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link @*navbar-btn*@ navbar-link logout-btn">Sign out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="btn btn-link navbar-link logout-btn">
        <li><a asp-controller="Account" asp-action="Login">Sign In</a></li>
    </ul>
}



